@using IpCameraSetup.Models
@model IpCameraSetup.Models.ViewModel
@using RSLERP.DataManager.Entity
@{
    ViewBag.Title = "Company Load";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-left:15px;">Company</h2>
<a style="margin-left:15px; margin-bottom:15px; margin-top:10px;" href="~/Company" class="btn btn-info">« Back</a>
@{Html.RenderAction("SubmitStatus", "Common", new { status = Model.CommitStatus, message = Model.SaveChangeMessage }); }
@using (Html.BeginForm("Store", HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString(), FormMethod.Post, new { id = "form", data_toggle = "validator", enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()
    <input type="hidden" value="@Model.VM_COMPANY.id" name="VM_COMPANY.id" />
    <div class="form-group">
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="VM_COMPANY.name" id="inputEmail3" placeholder="Name" value="@Model.VM_COMPANY.name">
            @UserHelper.ModelStateMsg(Model.Model_State, "VM_COMPANY.name")
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Contact Person</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="VM_COMPANY.contact_person" id="inputEmail3" placeholder="Contact Person Name" value="@Model.VM_COMPANY.contact_person">
            @UserHelper.ModelStateMsg(Model.Model_State, "VM_COMPANY.contact_person")
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Mobile No:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="VM_COMPANY.mobile" id="inputPassword3" placeholder="Mobile No." value="@Model.VM_COMPANY.mobile">
            @UserHelper.ModelStateMsg(Model.Model_State, "VM_COMPANY.mobile")
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Address</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="VM_COMPANY.address" id="inputPassword3" placeholder="Address" value="@Model.VM_COMPANY.address">
            @UserHelper.ModelStateMsg(Model.Model_State, "VM_COMPANY.address")
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-info">@(Model.VM_COMPANY.id == 0 ? "Save" : "Update")</button>
        </div>
    </div>
}