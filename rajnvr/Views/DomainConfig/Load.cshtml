@using IpCameraSetup.Models
@using RSLERP.DataManager.Entity
@model IpCameraSetup.Models.ViewModel
@{
    ViewBag.Title = "Domain Config Load";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-left:15px;">Domain Config</h2>
<a style="margin-left:15px; margin-bottom:15px; margin-top:10px;" href="~/DomainConfig" class="btn btn-info">« Back</a>
@using (Html.BeginForm("Store", HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString(), FormMethod.Post, new { id = "form", data_toggle = "validator", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <input type="hidden" value="@Model.VM_DOMAINCONFIG.id" name="VM_DDOMAINCONFIG.id" />
    <div class="form-group">
        <label class="col-sm-2 control-label">Base Path</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="VM_DOMAINCONFIG.basepath" id="inputEmail3" placeholder="Base Path" value="@Model.VM_DOMAINCONFIG.basepath">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Segment Time</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="VM_DOMAINCONFIG.segmenttime" id="inputEmail3" placeholder="Segment Time" value="@Model.VM_DOMAINCONFIG.segmenttime">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-info">@(Model.VM_DOMAINCONFIG.id == 0 ? "Save" : "Update")</button>
        </div>
    </div>
}
