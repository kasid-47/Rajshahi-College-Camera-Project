@using IpCameraSetup.Models
@using RSLERP.DataManager.Entity
@model IpCameraSetup.Models.ViewModel
@{
    ViewBag.Title = "Department Load";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-left:15px;">Department</h2>
<a style="margin-left:15px; margin-bottom:15px; margin-top:10px;" href="~/Department" class="btn btn-info">« Back</a>
@{Html.RenderAction("SubmitStatus", "Common", new { status = Model.CommitStatus, message = Model.SaveChangeMessage }); }
@using (Html.BeginForm("Store", HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString(), FormMethod.Post, new { id = "form", data_toggle = "validator", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <input type="hidden" value="@Model.VM_DEPARTMENT.id" name="VM_DEPARTMENT.id" />
    <div class="form-group">
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="VM_DEPARTMENT.name" id="inputEmail3" placeholder="Name" value="@Model.VM_DEPARTMENT.name">
            @UserHelper.ModelStateMsg(Model.Model_State, "VM_DEPARTMENT.name")
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Remarks</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="VM_DEPARTMENT.remarks" id="inputEmail3" placeholder="Remarks" value="@Model.VM_DEPARTMENT.remarks">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-info">@(Model.VM_DEPARTMENT.id == 0 ? "Save" : "Update")</button>
        </div>
    </div>
}
