@using IpCameraSetup.Models
@using RSLERP.DataManager.Entity
@model IpCameraSetup.Models.ViewModel
@{
    ViewBag.Title = "User View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">User Details</li>
    </ol>
    <!-- Icon Cards-->
    <div class="row">
        <div class="col-xl-10 col-sm-6 mb-3">
            <h2>User Details of @Model.VM_USER.username</h2>
            <a style="margin-left:15px; margin-bottom:15px; margin-top:10px;" href="~/User" class="btn btn-info">« Back</a>
            <ul class="list-group">
                <li class="list-group-item">Username    : @Model.VM_USER.username</li>
                <li class="list-group-item">Role        : @Model.VM_USER.RoleName</li>
                <li class="list-group-item">Company     : @Model.VM_USER.CompanyName</li>
                @*<li class="list-group-item">Departments :</li>*@
            </ul> 
            <br>
            <table class="table">
                <thead> <tr> <th>Departments</th> </tr> </thead>
                <tbody> 
                    @if (Model.VM_USERDEPTS.Count > 0)
                    {
                        foreach (UserDepts usd in Model.VM_USERDEPTS)
                        {
                           <tr> <td>&#9673 @usd.department_name</td> </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
